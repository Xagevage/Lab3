@model Lab3.Models.BookYear

@{
    ViewData["Title"] = "Publication Year Details";
}

<h1>Publication Year Details</h1>

<div>
    <h4>Book Publication Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.Name)
        </dd>
        <dt class="col-sm-2">
            Publication Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year.YearValue)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</div>